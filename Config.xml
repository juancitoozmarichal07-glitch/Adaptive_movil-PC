<?xml version='1.0' encoding='utf-8'?>
<widget id="com.adaptivemovilpc.gel" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Adaptive Movil PC</name>
    <description>
        Una máquina virtual de experiencia de escritorio para Android.
    </description>
    <author email="Juanmarichal57@Gmail.com" href="https://github.com/juancitoozmarichal07-glitch/Adaptive_movil-PC">
        Juan Gonzalo Marichal Cardozo
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    
    <!-- Preferencias Clave -->
    <preference name="DisallowOverscroll" value="true" />
    <preference name="Orientation" value="landscape" />
    <preference name="Fullscreen" value="true" />
    <preference name="AndroidXEnabled" value="true" />

    <!-- ================================================================== -->
    <!-- ▼▼▼ ¡EL PUENTE A ANDROID, VERSIÓN 2.0! (Plugins Fiables) ▼▼▼ -->
    <!-- ================================================================== -->
    
    <!-- El plugin para lanzar las apps (este siempre ha funcionado bien) -->
    <plugin name="cordova-plugin-intent" spec="1.1.1" />
    
    <!-- ¡EL NUEVO ESCÁNER! Este es el plugin que SÍ funciona -->
    <plugin name="cordova-plugin-apps-retriever" spec="0.0.2" />

</widget>
